generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  USER
}

model Company {
  id          Int      @id @map("_id")
  name        String
  description String?
  address     String
  phone       String
  email       String
  password    String
  website     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  files       File[]
  numberOfUsers Int
  departments String[]
}

model File {
  id        Int      @id @map("_id")
  name      String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   Company  @relation(fields: [companyId], references: [id])
  companyId Int
  department String
}

model User {
  id        Int      @id @map("_id")
  name      String
  email     String   @unique
  password  String
  type      UserType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   Company @relation(fields: [companyId], references: [id])
  companyId Int
  department String[]
  userLogs UserLog[]
}

model UserLog {
  id        Int      @id @map("_id")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  type     LogType 
}

enum LogType {
  LOGIN // all
  LOGOUT // all
  REQUESTED_DELETE //sub-user and company(main user)
  REQUESTED_UPDATE //sub-user
  DELETE // ADMIN
  UPDATE // company(main user)
  UPLOAD // company(main user) and sub user
}